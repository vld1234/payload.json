{
    "type": "message",
    "attachments": [
        {
            "contentType": "application/vnd.microsoft.card.adaptive",
            "contentUrl": null,
            "content": {
                "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
                "type": "AdaptiveCard",
                "version": "1.5",
                "body": [
                    {
                        "type": "TextBlock",
                        "size": "Medium",
                        "weight": "Bolder",
                        "text": "GitLab Project aos_cloud"
                    },
                    {
                        "type": "ColumnSet",
                        "columns": [
                            {
                                "type": "Column",
                                "items": [
                                    {
                                        "type": "Image",
                                        "style": "Person",
                                        "url": "https://virtualhobbit.com/wp-content/uploads/2020/04/20200423-1.png",
                                        "size": "Large"
                                    }
                                ],
                                "width": "auto"
                            },
                            {
                                "type": "Column",
                                "items": [
                                    {
                                        "type": "TextBlock",
                                        "spacing": "None",
                                        "text": "**REPOSITORY**: [aos_cloud]($CI_PROJECT_URL)",
                                        "isSubtle": true,
                                        "wrap": true
                                    },
                                    {
                                        "type": "TextBlock",
                                        "spacing": "None",
                                        "text": "**TIMESTAMP**: $CI_COMMIT_TIMESTAMP",
                                        "isSubtle": true,
                                        "wrap": true
                                    },
                                    {
                                        "type": "TextBlock",
                                        "spacing": "None",
                                        "text": "**Author**: $GITLAB_USER_NAME",
                                        "isSubtle": true,
                                        "wrap": true
                                    },
                                    {
                                        "type": "TextBlock",
                                        "spacing": "None",
                                        "text": "**NEW_TAG**: $NEW_TAG",
                                        "isSubtle": true,
                                        "wrap": true
                                    },
                                    {
                                        "type": "TextBlock",
                                        "spacing": "None",
                                        "text": "**BRANCH**: $CI_COMMIT_BRANCH",
                                        "isSubtle": true,
                                        "wrap": true
                                    },
                                    {
                                        "type": "TextBlock",
                                        "spacing": "None",
                                        "text": "**PIPELINE**: [Pipeline #${CI_PIPELINE_ID}]($CI_PIPELINE_URL)",
                                        "isSubtle": false,
                                        "wrap": true,
                                        "color": "default"
                                    },
                                    {
                                        "type": "TextBlock",
                                        "spacing": "None",
                                        "text": "**STATUS**: $STATUS $ICON",
                                        "isSubtle": false,
                                        "wrap": true,
                                        "color": "default"
                                    }
                                ],
                                "width": "stretch"
                            }
                        ]
                    }

                ]

            }
        }
    ]
}
